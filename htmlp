    <script src="js/card.js?v=3"></script>
                                 <script>
                                document.addEventListener("DOMContentLoaded", function () {
	// Obtén el elemento play-pause-button
	let button = document.querySelector("#play-pause-button");

	const mutedIcon = '<i class="bi bi-volume-mute-fill"></i>';
	const unmutedIcon = '<i class="bi bi-volume-up-fill"></i>';
	// Obtén el elemento video
	// let video = document.querySelector("video");
	// Crea un nuevo objeto Audio y carga el mp3
	let audio = new Audio("https://github.com/mnldigitaldesign/Files/raw/refs/heads/main/vdf.mp3");
	audio.loop = true;
	// Agrega un controlador de eventos 'click' al botón
	button.addEventListener("click", function () {
		// Si el audio está en pausa, lo reproduce. Si no, lo pausa.
		if (audio.paused) {
			audio.play();
			// Cambia el icono del botón
			button.innerHTML = mutedIcon;
		} else {
			audio.pause();
			// Cambia el icono del botón
			button.innerHTML = unmutedIcon;
		}
	});
	// Resto del código JavaScript
	// Obtén el elemento overlay y el botón continuar
	let overlay = document.querySelector("#overlay");
	let continueButton = document.querySelector("#continue-button");

	// Agrega un controlador de eventos 'click' al botón continuar
	continueButton.addEventListener("click", function () {
		// Oculta la capa overlay
		overlay.style.display = "none";
		// Comienza a reproducir el audio
		audio.play();
		// video.play();
		cambiarImagen();
	});
var imagenes = ["CCgcohb.jpeg","iQU3V4u.jpeg","0fQ2nLd.jpeg","zwb74x1.jpeg",];
	var indice = 0;

	function cambiarImagen() {
		var contenedor = document.getElementById("container");
		contenedor.style.backgroundImage = `url("https://i.imgur.com/${imagenes[indice]}")`;
		indice++;
		if (indice == imagenes.length) {
			indice = 0;
		}
		setTimeout(cambiarImagen, 4000); // Cambia la imagen cada 5 segundos
	}
	document.addEventListener("visibilitychange", () => {
		if (document.hidden) {
			audio.pause();
			// video.pause();
		} else if (document.getElementById("overlay").style.display == "none") {
			audio.play();
			// video.play();
		}
	});
});

                                                             </script>
                                
